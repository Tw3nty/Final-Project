block content
  h1 Hoodies
  main
    each e in merch3
      if e.type == 'Hoodies'
        .card(style='width: 18rem;')
          img.resize(src= e.merch)
          .card-body
            h5.card-title #{e.title}
            p.card-text
              | #{e.description}
            p.card-text 
              | #{e.cost}
            a.btn.btn-primary(href='#') Add to Cart
